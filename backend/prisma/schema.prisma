generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model user{
  id Int @id @default(autoincrement())// type: Int, Pkey: @id
  name String
  password String
  docs docs[] //prisma requires both of these to exist
}

model docs{
  id Int @id @default(autoincrement())
  ownerid Int
  owner user @relation(fields: [ownerid], references:[id])
  name String
  text Json
}